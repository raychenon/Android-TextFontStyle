<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/TextStyle.ActionBarStyle</item>

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="TextStyle.ActionBarStyle"   parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/TextStyle.ActionBar.TitleTextStyle</item>
    </style>

    <style name="TextStyle.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/black</item>
    </style>



    <style name="TextStyleBaroque" >
        <item name="typeFace">@string/font_baroquescript</item>
    </style>

    <style name="TextStyleFajardo" >
        <item name="android:textSize">26sp</item>
        <item name="typeFace">@string/font_james_fajardo</item>
    </style>

    <style name="TextStyleStint" >
        <item name="android:padding">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="typeFace">@string/font_stint_ultra_condensed</item>
    </style>


</resources>